<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.osate.sysmlv2.contract.evaluation.ui.evaluateQueries"
            name="Debug: Evaluate Queries">
      </command>
      <command
            id="org.osate.sysmlv2.contract.executePlan"
            name="Execute Verificaton Plans">
      </command>
      <command
            id="org.osate.sysmlv2.contract.checkPlan"
            name="Check Verification Plan Completeness">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.sysmlv2.contract.evaluation.ui.ExecutePlanHandler"
            commandId="org.osate.sysmlv2.contract.executePlan">
         <enabledWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.xtext.ui.editor.outline.impl.EObjectNode">
                        <test
                              forcePluginActivation="true"
                              property="org.osate.contract.evaluation.ui.superType"
                              value="VerificationPlan">
                        </test>
                     </adapt>
                  </iterate>
               </and>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.sysmlv2.contract.evaluation.ui.CheckPlanHandler"
            commandId="org.osate.sysmlv2.contract.checkPlan">
         <enabledWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.xtext.ui.editor.outline.impl.EObjectNode">
                        <test
                              forcePluginActivation="true"
                              property="org.osate.contract.evaluation.ui.superType"
                              value="VerificationPlan">
                        </test>
                     </adapt>
                  </iterate>
               </and>
            </with>
         </enabledWhen>
      </handler>

      <handler
            class="org.osate.sysmlv2.contract.evaluation.ui.EvaluationHandler"
            commandId="org.osate.sysmlv2.contract.evaluation.ui.evaluateQueries">
         <enabledWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.xtext.ui.editor.outline.impl.EObjectNode">
                        <test
                              forcePluginActivation="true"
                              property="org.osate.contract.evaluation.ui.superType"
                              value="VerificationPlan">
                        </test>
                     </adapt>
                  </iterate>
               </and>
            </with>
          </enabledWhen>
      </handler>
   </extension>
