	<extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
			<command commandId="org.osate.sysmlv2.contract.evaluation.ui.evaluateQueries"
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<and>
						<reference definitionId="org.osate.sysmlv2.contract.Contract.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
				</visibleWhen>
			</command>
		</menuContribution>

      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
         <menu
               id="org.osate.sysmlv2.contract.menu"
               label="Analysis Contracts">
            <command
                  commandId="org.osate.sysmlv2.contract.executePlan"
                  style="push">
				<visibleWhen checkEnabled="false">
					<and>
						<reference definitionId="org.osate.sysmlv2.contract.Contract.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
				</visibleWhen>
            </command>
            <command
                  commandId="org.osate.sysmlv2.contract.checkPlan"
                  style="push">
				<visibleWhen checkEnabled="false">
					<and>
						<reference definitionId="org.osate.sysmlv2.contract.Contract.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
				</visibleWhen>
            </command>
         </menu>
      </menuContribution>
	</extension>

   
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.osate.sysmlv2.contract.evaluation.ui.EObjectNodeContractSuperTypePropertyTester"
            id="org.osate.contract.evaluation.ui.EObjectSuperTypePropertyTester"
            namespace="org.osate.contract.evaluation.ui"
            properties="superType"
            type="org.eclipse.xtext.ui.editor.outline.impl.EObjectNode">
      </propertyTester>
   </extension>
